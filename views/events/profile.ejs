            <section class="main__dashboard-suggestions">
                <h3 class="header-tertiary">Suggestions</h3>
                <div class="main__dashboard-suggestions_container">
                    <%- include('../includes/event.ejs', {events: eventsSuggested, pathPOST: '/home/event-add' }) %>
                </div>
            </section>

            <section class="main__dashboard-profile">
                <h3 class="header-tertiary">Edit Profile</h3>
                <div class="main__profile-user_details">
                    <img src="assets/images/user.jpg" alt="">
                    <div>
                        <p class="paragraph-secondary">Katya Romanova</p>
                        <p class="paragraph-quaternary">Frontend Web Developer</p>
                        <p class="paragraph-quaternary">Prague, Czech Republic</p>
                    </div>
                </div>
